@using EntityLayer.Concrete
@model List<AppUser>
@{
    ViewData["Title"] = "UserRoleList";
    Layout = "AdminLayout";
}


<!DOCTYPE html>
<html>
<body>

    <div class="wrapper wrapper-content animated fadeInRight">
        <div class="row">
            <div class="col-lg-12">
                <div class="ibox ">
                    <div class="ibox-title">
                        <h5>Kullanıcı Rol Listesi  </h5>
                    </div>
                    <div class="ibox-content">

                        <table class="table table-hover">
                            <thead>
                                <tr>
                                    <th>Kullanıcı</th>
                                    <th>Rol Ata</th>
                                    <th>Sil</th>
                                    <th>Düzenle</th>
                                </tr>
                            </thead>
                            <tbody>
                                @foreach (var item in Model)
                                {
                                    <tr>
                                        <td>@item.UserName</td>
                                        <td><a href="/Admin/AdminRole/AssignRole/@item.Id" class="btn btn-outline-info">Rol Ata</a></td>
                                        <td><a href="/Admin/AdminRole/DeleteRole/@item.Id" class="btn btn-outline-danger">Sil</a></td>
                                        <td><a href="/Admin/AdminRole/UpdateRole/@item.Id" class="btn btn-outline-success">Güncelle</a></td>
                                    </tr>
                                }
                            </tbody>
                        </table>
                        <a href="/Admin/AdminRole/Index" class="btn btn-outline-primary">Rol Listesine Dön</a>
                    </div>
                </div>
            </div>
        </div>

    </div>
</body>
</html>

@section scripts {
}
